{
  "appId": "org.qortal.Qortal-Hub",
  "productName": "qortal-hub",
  "copyright": "Copyright Â© 2021 - 2025 Qortal",
  "compression": "normal",
  "asar": true,
  "afterPack": "scripts/afterPack.js",
  "files": [
    "assets/**/*",
    "build/**/*",
    "capacitor.config.*",
    "app/**/*",
    "scripts/**/*"
  ],
  "linux": {
    "target": ["AppImage", "deb", "snap", "rpm"],
    "category": "Network",
    "packageCategory": "Network",
    "desktop": {
      "Name": "Qortal Hub",
      "StartupWMClass": "qortal-hub"
    },
    "executableName": "qortal-hub",
    "icon": "assets/png"
  },
  "appImage": {
    "artifactName": "Qortal-Hub.${ext}"
  },
  "deb": {
    "artifactName": "Qortal-Hub-Setup.${ext}",
    "synopsis": "Qortal Hub for Linux",
    "afterInstall": "scripts/add-debian-apt-repo.sh"
  },
  "snap": {
    "artifactName": "Qortal-Hub-Setup.${ext}",
    "synopsis": "Qortal Hub for Linux"
  },
  "rpm": {
    "artifactName": "Qortal-Hub-Setup.${ext}",
    "synopsis": "Qortal Hub for Linux"
  },
  "directories": {
    "output": "dist",
    "buildResources": "resources"
  },
  "publish": [
    {
      "provider": "github",
      "owner": "Qortal",
      "repo": "Qortal-Hub",
      "releaseType": "draft"
    }
  ]
}
